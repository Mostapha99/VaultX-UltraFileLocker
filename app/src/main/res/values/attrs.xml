<!-- res/values/attrs.xml -->
<resources>
    <!-- تعريف خاصية لون الخلفية -->
    <attr name="colorBackground" format="color" />

    <!-- تعريف خصائص ألوان شائعة -->
    <attr name="colorPrimary" format="color" />
    <attr name="colorPrimaryDark" format="color" />
    <attr name="colorAccent" format="color" />
    <attr name="colorControlNormal" format="color" />
    <attr name="colorControlActivated" format="color" />
    <attr name="colorControlHighlight" format="color" />
    <attr name="colorButtonNormal" format="color" />

    <!-- خصائص نصوص -->
    <attr name="textColorPrimary" format="color" />
    <attr name="textColorSecondary" format="color" />

    <!-- خصائص أخرى شائعة -->
    <attr name="windowActionBar" format="boolean" />
    <attr name="windowNoTitle" format="boolean" />
    <attr name="windowActionModeOverlay" format="boolean" />
    <attr name="windowDrawsSystemBarBackgrounds" format="boolean" />

    <!-- مثال على تعريف خاصية بأكثر من نوع -->
    <attr name="customSize" format="dimension|reference" />
</resources>